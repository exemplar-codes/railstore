<h1>Items</h1>
<table border="1" class="table padding">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Quantity</th>
        </tr>
    </thead>
    <tbody>
        <% @items.each do |item| %>
            <% if item.quantity > 0 %>
                <tr>
                    <td><%= item.name %></td>
                    <td><%= item.price %></td>
                    <td><%= item.quantity %></td>
                </tr>
            <% end %>
        <% end %>
    </tbody>
</table>
